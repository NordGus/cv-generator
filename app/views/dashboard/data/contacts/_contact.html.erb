<%= content_tag :div, id: dom_id(contact) do %>
  <h4><%= contact.content %></h4>
  <%=
    button_to "Edit",
              edit_dashboard_person_data_contact_path(person, contact),
              class: "px-3 py-2 rounded bg-blue-500 hover:bg-blue-600 text-white",
              form_class: "m-0 p-0 inline-flex items-center justify-center"
  %>
  <%=
    button_to "Destroy",
              dashboard_person_data_contact_path(person, contact),
              class: "px-3 py-2 rounded bg-red-500 hover:bg-red-600 text-white",
              form_class: "m-0 p-0 inline-flex items-center justify-center",
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this #{contact.icon} contact?" }
  %>
<% end %>