<%=
  form_for work_experience,
           url: experience_form_url(person, resume, work_experience),
           method: experience_form_method(work_experience) do |form|
%>
  <%= form.date_field :from %>
  <%= form.date_field :to %>
  <%= form.text_area :description %>
  <%= form.collection_radio_buttons :company_id, companies, :id, :name %>
  <%= form.submit %>
<% end %>