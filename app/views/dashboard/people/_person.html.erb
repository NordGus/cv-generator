<%=
  content_tag :div,
              id: dom_id(person),
              class: "inline-flex flex-col w-60 h-60 rounded justify-between m-3 p-1 hover:bg-slate-100" do
%>
  <%=
    link_to dashboard_person_path(person),
            class: "inline-flex flex-col justify-start items-center w-full grow" do
  %>
    <% if person.avatar.present? %>
      <%= image_tag person.avatar.variant(:thumb), class: "rounded-full mt-8 mb-2" %>
    <% else %>
      <div class="block h-100px w-100px rounded-full mt-8 mb-2 bg-gray-500"></div>
    <% end %>
    <p><%= person.name %></p>
  <% end %>

  <%=
    button_to "Destroy",
              dashboard_person_path(person),
              class: "px-3 py-2 rounded bg-red-500 hover:bg-red-600 text-white",
              form_class: "m-0 p-0 inline-flex items-center justify-center",
              method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete #{person.name} data?" }
  %>
<% end %>
